@model StudiekollenNew.ViewModels.QuestionsViewModels.AddQuestionViewModel
@section metatags
{
    <meta name="Title" content="@ViewBag.Title" />
    <meta name="Description" content="@ViewBag.Description" />
    <meta name="Keywords" content="@ViewBag.KeyWords" />
}

<h2>@Model.ExamName</h2>

@using (Html.BeginForm("AddQuestionToExam", "Question"))
{
    <div class="form-horizontal questionForm">
        <hr />
        <div class="form-group questionForm">
            @Html.LabelFor(model => model.Query, htmlAttributes: new { @class = "control-label col-md-2" })<br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Query, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Query)
            </div>
        </div>
        <div class="form-group questionForm">
            @Html.LabelFor(model => model.Answer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Answer, 7, 100, new { htmlAttributes = new { @class = "form-control textarea" } })
            </div>
        </div>
        <div class="form-group questionForm">
            @Html.AntiForgeryToken()
            <div class="col-md-offset-2 btnDiv">
                <input type="submit" value="Lägg till ny fråga" class="btn btn-default btn-block" /><br />
            </div>
        </div>
    </div>

}
@*Klientvalidering*@
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}