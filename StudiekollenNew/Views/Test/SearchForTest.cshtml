@model StudiekollenNew.ViewModels.FindTestViewModel

<h2>Sök efter prov</h2>

@using (Html.BeginForm("SearchForTest", "Test"))
{   
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("Användare", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">             
                @Html.DropDownListFor(model => model.Username , new SelectList(Model.Users,"Username","UserName","Välj användare"),"Välj användare" ,  new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.AntiForgeryToken()
                <input type="submit" value="Sök" class="btn btn-default btn-block"/><br/>
                @Html.ValidationMessageFor(model => model.Username)
            </div>
        </div>
    </div>
 
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

