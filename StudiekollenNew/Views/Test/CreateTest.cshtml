{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Spara prov" class="btn btn-default btn-block" />
            </div>
        </div>
    </div>
}








