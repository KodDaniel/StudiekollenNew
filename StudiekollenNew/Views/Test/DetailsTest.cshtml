@model StudiekollenNew.ViewModels.SearchTestViewModel

<h3>Prov tillhörande @Model.Username:</h3><br/>
       
  @if (!Model.AllTests.Any())
  {
      @Html.Partial("_partialDetails")

  }
  else
  {
      <table id="customers" class="table table-bordered table-hover">

          <tr>
              <th>Provnamn</th>
              <th>Antal frågor</th>
              <th>Skapades</th>
              <th>Ändrades senast</th>
              <th></th>
          </tr>
               
          @foreach (var test in Model.AllTests)
          {
              <tr>

                  <td>@Html.ActionLink(test.Name, "HandleTest", "Test", new {id = test.Id}, null)</td>
                    
                  @if (!test.Questions.Any())
                  {
                      <td>0</td>
                  }
                  else
                  {
                      <td>@test.Questions.Count()</td>
                  }
                    
                  <td>@test.CreateDate</td>

                  @if (test.ChangeDate is null)
                  {
                      <td>Har aldrig ändrats</td>
                  }
                  else
                  {
                      <td>@test.ChangeDate</td>
                  }
                  <td>@Html.ActionLink("Radera prov", "DeleteTest", "Test", new {id = test.Id}, null)</td>
              </tr>
          }

      </table>
  }









    
