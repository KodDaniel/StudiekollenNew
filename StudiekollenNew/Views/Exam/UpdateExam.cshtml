@model StudiekollenNew.ViewModels.TestViewModels.UpdateExamViewModel

<h2>Uppdatera prov</h2>

@using (Html.BeginForm("UpdateExam", "Exam"))
{
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.ExamName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExamName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.AntiForgeryToken()
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Uppdatera" class="btn btn-default btn-block" /><br />
                @Html.ValidationMessageFor(model => model.ExamName)
            </div>
        </div>
    </div>
}
@*Klientvalidering*@
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


